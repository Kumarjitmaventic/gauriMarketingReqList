<mvc:View controllerName="marketingcampaignreqlist.zcrmktmarketingreqlist.controller.Home"
	xmlns:filterbar="sap.ui.comp.filterbar"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns:core="sap.ui.core"
	xmlns:smartList="sap.ui.comp.smartlist"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns="sap.m">
	<Page id="_IDGenPage1" title="{i18n>title}">
		<smartFilterBar:SmartFilterBar id="_IDGenSmartFilterBar" entitySet="RequestSet" showClearOnFB="false" advancedMode="false" showAllFilters="false" showMessages="false" showFilterConfiguration="false" useToolbar="false">

			<smartFilterBar:controlConfiguration>

				<smartFilterBar:ControlConfiguration key="RequestId" index="1" label="Request Id" width="300px" visibleInAdvancedArea="true">
					<smartFilterBar:customControl>
						<Input value="{filterModel>/RequestId}"/>

					</smartFilterBar:customControl>
				</smartFilterBar:ControlConfiguration>

				<smartFilterBar:ControlConfiguration key="Status" label="Status" visibleInAdvancedArea="true">
					<smartFilterBar:customControl>
						<Input value="{filterModel>/Status}"/>
					</smartFilterBar:customControl>
				</smartFilterBar:ControlConfiguration>

				<smartFilterBar:ControlConfiguration key="PermitType" label="Permit Type" visibleInAdvancedArea="true">
					<smartFilterBar:customControl>
						<ComboBox id="_IDGenComboBox" change="onSelectionChange" >
							<items>
								<core:Item key="1" text="Special Offer" />
								<core:Item key="2" text="Raffle Draw"/>
								<core:Item key="3" text="Scratch &amp; Win"/>
								<core:Item key="4" text="Sales"/>
								<core:Item key="5" text="Advertising Stickers"/>

							</items>
						</ComboBox>
						
					</smartFilterBar:customControl>
				</smartFilterBar:ControlConfiguration>
				<smartFilterBar:ControlConfiguration key="RequesterId" label="Requester Id" width="300px" visibleInAdvancedArea="true">
					<smartFilterBar:customControl>
						<Input value="{filterModel>/RequesterId}"/>

					</smartFilterBar:customControl>
				</smartFilterBar:ControlConfiguration>
				<smartFilterBar:ControlConfiguration key="InitiatedDate" label="Date" visibleInAdvancedArea="true">
					<smartFilterBar:customControl>
						<DateRangeSelection value="{filterModel>/InitiatedDate}"/>
					</smartFilterBar:customControl>
				</smartFilterBar:ControlConfiguration>
			</smartFilterBar:controlConfiguration>
			<!-- <smartFilterBar:filterGroupItems>
                   <filterbar:FilterGroupItem groupName="A">
                   <filterbar:control>
                   </filterbar:control>
                   </filterbar:FilterGroupItem>

     

    </smartFilterBar:filterGroupItems> -->
			<smartFilterBar:layoutData>
				<FlexItemData shrinkFactor="0"/>
			</smartFilterBar:layoutData>

		</smartFilterBar:SmartFilterBar>



		<smartTable:SmartTable id="_IDGenSmartTable" entitySet="RequestSet" smartFilterId="_IDGenSmartFilterBar" initiallyVisibleFields="RequestId,Status,Remarks,InitiatedDate" tableType="Table" useExportToExcel="true" beforeExport="onBeforeExport" useVariantManagement="true" useTablePersonalisation="true" header="Line Items" showRowCount="true" persistencyKey="SmartTableAnalytical_Explored" enableAutoBinding="true" class="sapUiResponsiveContentPadding" enableAutoColumnWidth="true" beforeRebindTable="onBeforeRebind" editTogglable="true">
			<!-- layout data used to make the table growing but the filter bar fixed -->


			<Table id="manualTable" inset="true">

				<items>
					<ColumnListItem type="Navigation" press="onColumnListItemPress">

					</ColumnListItem>
				</items>
			</Table>

		</smartTable:SmartTable>

	</Page>
</mvc:View>
